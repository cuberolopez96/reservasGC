{% extends 'reservasBundle:Admin:layout.html.twig' %}
{% block content %}
<main class="valign-wrapper center-align">
  <div class="row">
    <div class="card col s12">
      <div class="card-content">
        <card-title  class="row">
            <h2 class="titularCard sinPadding col s12">
              {{menu.nombre}}   ({{menu.precio}} €)
                <a href="/admin/menus/editar/{{menu.idmenu}}" class="material-icons">edit</a>
                <a href="/admin/menus/delete/{{menu.idmenu}}" class="material-icons">delete</a>
            </h2>
        </card-title>
        <div class="row">
            <div class="col s12 left-align">
                {{menu.descripción}}
            </div>
            <div class="col s12">
              <p class="left-align"><strong>Alergenos:</strong>
                  {% for alergeno in alergenos %}
                      {% if loop.index < (alergenos|length) %}
                          {{alergeno.alergenosalergenos.nombre}},
                      {% else %}
                          {{alergeno.alergenosalergenos.nombre}}
                      {% endif %}
                  {% endfor %}
              </p>
            </div>

        </div>

      </div>
    </div>

  </div>
</main>
{% endblock %}
