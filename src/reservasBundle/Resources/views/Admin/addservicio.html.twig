{% extends 'reservasBundle:Admin:layout.html.twig' %}
{% block content %}
<main class="valign-wrapper center-align paddingTop2">
  <div class="row">

    <header class="col s12">
      <h1>Añadir Servicio <a href="/admin/servicios"><i class="material-icons btn-floating">close</i></a></h1>
    </header>

    <div class="col s12">
      <div class="card paddingTop1">
        <div class="card-content sinPadding">
          <div class="row">
            <form class="col s12" action="/admin/servicios/add" method="post">
                <div class="row">
                  <div class="col s12 l6">
                    <label class="left comoH3" for="">Nombre</label>
                    <input  class="inputEst center-align sinPadding" type="text"  name="nombre"  required="required" >
                  </div>
                  <div class="col s12 l6">
                    <label class="left comoH3" for="">Fecha del Servicio</label>
                    <input  class="inputEst center-align sinPadding" type="text"  name="fecha" placeholder="dd/mm/YYYY" pattern="\d\d/\d\d/\d\d\d\d"  value="{{"now" | date('d/m/Y')}}">
                  </div>
                  <div class="col s12 l6">
                    <label class="labelEst left" for="">Hora del Servicio</label>
                    <input class="inputEst center-align sinPadding" type="text" name="hora" placehoder = "HH:ii" pattern="^([0-1][0-9]|[1-2][0-3]):[0-5][0-9]$" value="{{"now" | date('H:i')}}">


                  </div>
                  <div class="col s12 l6">
                    <label class="labelEst left" for="">Plazas Máximas</label>
                    <input class="inputEst center-align sinPadding" type="number" min="1" name="plazas" value="25">
                  </div>
                  <div class="col s12 l12">
                    <label class="labelEst left comoH3" for="">Menú</label>
                    <select name="menu">
                        <option value="null">Ninguno</option>
                        {% for menu in menus %}
                            <option value="{{menu.idmenu}}">{{menu.nombre}}</option>
                        {% endfor %}
                    </select>
                  </div>
                  <div class="col s12">
                    <input type="submit" class="button especial" name="guardar" value="Añadir">
                  </div>
                </div>
            </form>
          </div>
        </div>
      </div>
    </div>

  </div>
</main>
{% endblock %}
