{% extends 'reservasBundle:Admin:layout.html.twig' %}
{% block content %}
<main class="valign-wrapper center-align">
  <div class="row">
    <h1 class="col s12">Añadir Correo <a href="/admin/correos"><i class="material-icons btn-floating">close</i></a></h1>
    <div class="card col s12">
        <div class="card-content sinPaddingBot paddingTop1">

            <form class="" action="/admin/correos/add" method="POST">
              <div class="row">

                  <div class="col s12 l4">
                      <label class="comoH3 labelEst" for="nombre">Nombre</label>
                      <input class="inputEst center-align" type="text" name="nombre" value="">
                  </div>

                  <div class="col s12 l4">
                      <label class="comoH3 labelEst" for="apellidos">Apellidos</label>
                      <input class="inputEst center-align" type="text" name="apellidos" value="">
                  </div>

                  <div class="col s12 l4">
                    <label class="comoH3 labelEst" for="correo">Correo</label>
                    <input class="inputEst center-align" type="email" placeholder="email@email.com" name="correo" value="">
                  </div>
                  <div class="col s12 sinPadding">
                    <input type="submit" class="button especial" name="add" value="Añadir">
                  </div>

              </div>
            </form>

        </div>
    </div>


  </div>
</main>

{% endblock %}
