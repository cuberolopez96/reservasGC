{% extends 'reservasBundle:Admin:layout.html.twig' %}
{% block content %}
<main class="valign-wrapper center-align">
  <div class="row">

    <header class="col s12">
        <h1 class="center-align">
          Correos
          <a href="/admin/correos/add"><i class="material-icons">library_add</i></a>
        </h1>
    </header>

    <div class="col s12">
      <div class="card">
        <div class="card-content sinPadding">
          <table class="bordered">
            <thead id="titularTabla">
              <tr>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Email</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              {% for correo in correos %}
                <tr>
                    <td>{{correo.nombre}}</td>
                    <td>{{correo.apellidos}}</td>
                    <td>{{correo.email}}</td>
                    <td><a href="/admin/correos/delete/{{correo.idcorreos}}"><i class="material-icons">delete</i></a></td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>
</main>
{% endblock %}
