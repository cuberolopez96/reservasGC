{% extends 'reservasBundle::layout.html.twig' %}
{% block content %}

	<!-- NAV -->
	 <nav>
	    <div class="nav-wrapper">
	      <a href="/" class="brand-logo left"><img class="logo" src="{{asset('bundles/reservas/img/image948-e1447362808491.png')}}"></a>
	    	<span class="letraNav">Reservas Restaurante IES Gran Capitán</span>
	    </div>
	 </nav>

	<!-- MAIN -->
	<main class="valign-wrapper center-align">
		<div class="row">
			<!-- Buscador -->
			<div id="buscadorConsulta" class="col s12">
				<div class="row">
					<p class="col s12">Introduzca su código de reserva para consultar sus datos</p>
					<div class="input-field col s12">
						<button id="buscar" class=" waves waves-effect prefix no-button"><i class="material-icons">search</i></button>
						<input type="text" id="entrada">
					</div>
				</div>
			</div> <!--  -->
			<!-- Reserva Buscada -->
			<div id="resultadoConsulta" class="col s12 m8 offset-m2">

			</div>
			<!-- Editar Formulario -->
			<div id="formularioConsulta" class="card col s12 m10 offset-m1">
				<div class="row">

					<div class="input-field col s12 m6">
							<label class="comoH3">Hora</label>
							<input type="text" id="horallegada" placeholder="hh:mm"name="" value="">
							<span id="errorhora" class="errores">Que el formato de hora no es el correcto</span>
					</div>

					<div class="input-field col s12 m6">
							<input type="number" min="0" max="25" id="plazas" name="" value="">
							<label class="comoH3">Personas</label>
					</div>

						<div class="row">
							<div class="input-field col s12 m6 l3">
								<input data-validation="length alphanumeric" class="" id="name" data-tooltip="El nombre no es correcto" type="text" name="" required="required">
								<label for="name">Nombre</label>
								<span class="errores" id="errorname">El nombre no es Correcto</span>
							</div>

							<div class="input-field col s12 m6 l3">
								<input data-validation="custom" class="" data-tooltip="El apellido no es correcto" data-validation-regexp="^([a-z]+)$" id="ap" type="text" name="" required="required">
								<label for="ap">Apellidos</label>
								<span class="errores" id="errorap">El apellido no es correcto</span>
							</div>

							<div class="input-field col s12 m6 l3">
								<input data-validation="custom" class="" data-tooltip="El telefono no es correcto" data-validation-regexp="^([0-9]+)$" id="tlfn" type="text" name="">
								<label for="tlfn" data-error="escriba un número de teléfono válido" data-success="correcto">Telefono</label>
								<span class="errores" id="errortlfn">El telefono no es correcto</span>
							</div>

							<div class="input-field col s12 m6 l3">
								<input data-validation="email" class="" data-tooltip="el email no es correcto" id="email" type="text" name="">
								<label for="email">Correo</label>
								<span class="errores" id="erroremail">el email no es correcto</span>
							</div>

							<div id="check" class="input-field col s12">
								<div class="row">
									<div class="col s12">
										<h3>Alérgenos</h3>
									</div>

									<div class="col">
										<p>
											<input type="checkbox" class="filled-in" name="" id="gluten">
											<label for="gluten">Gluten</label>
										</p>
										<p>
											<input type="checkbox" class="filled-in" name="" id="huevos">
											<label for="huevos">Huevos</label>
										</p>
										<p>
											<input type="checkbox" class="filled-in" name="" id="pescado">
											<label for="pescado">Pescado</label>
										</p>
									</div>

									<div class="col">
										<p>
											<input type="checkbox" class="filled-in" name="" id="cacahuetes">
											<label for="cacahuetes">Cacahuetes</label>
										</p>
										<p>
											<input type="checkbox" class="filled-in" name="" id="soja">
											<label for="soja">Soja</label>
										</p>
										<p>
											<input type="checkbox" class="filled-in" name="" id="lacteos">
											<label for="lacteos">Lácteos</label>
										</p>
									</div>

									<div class="col">
										<p>
											<input type="checkbox" class="filled-in" name="" id="apio">
											<label for="apio">Apio</label>
										</p>
										<p>
											<input type="checkbox" class="filled-in" name="" id="mostaza">
											<label for="mostaza">Mostaza</label>
										</p>
										<p>
											<input type="checkbox" class="filled-in" name="" id="sesamo">
											<label for="sesamo">Sésamo</label>
										</p>
									</div>

									<div class="col">
										<p>
											<input type="checkbox" class="filled-in" name="" id="sulfitos">
											<label for="sulfitos">Sulfitos</label>
										</p>
										<p>
											<input type="checkbox" class="filled-in" name="" id="moluscos">
											<label for="moluscos">Moluscos</label>
										</p>
										<p>
											<input type="checkbox" class="filled-in" name="" id="crustaceos">
											<label for="crustaceos">Crustáceos</label>
										</p>
									</div>

									<div class="col">
										<p>
											<input type="checkbox" class="filled-in" name="" id="altramuces">
											<label for="altramuces">Altramuces</label>
										</p>
										<p>
											<input type="checkbox" class="filled-in" name="" id="frutos_secos">
											<label for="frutos_secos">Frutos secos</label>
										</p>
									</div>

								</div>
							</div>

							<div class="input-field col s12 l6 obs">
								<textarea id="observaciones" class="materialize-textarea">
								</textarea>
								<label class="comoH3" for="observaciones">Observaciones</label>
							</div>

							<div class="input-field col s12 l6">
								<p>
									<input id="boletin" class="filled-in" type="checkbox" name="" checked>
									<label for="boletin">¿Desea subscribirse a nuestro boletín informativo?</label>
								</p>
							</div>

							<div class="input-field col s12 l6">
								<p id="captcha">
									<p>
										<input id="robot" data-tooltip="pulsa aquí" class="filled-in " type="checkbox" name="">

										<label for="robot">No soy un robot</label>
									</p>
									<br>
									<span class="errores" id="errorrobot">Indique que no es un robot</span>
								</p>
							</div>
							<div class="input-field col s12 misBotones">
								<div id="botones1" class="row">
									<div class="col s12 m6"><a id="salir" class="button especial2">Salir</a></div>
									<div class="col s12 m6"><a id="guardar" href="#modal1" class="button especial">Guardar</a>	</div>
								</div>
							</div>
						</div>

				</div>
			</div> <!-- fORMULARIO CONSULTA -->

			<!--MODALS -->
			<div id="modal1" class="modal">
				<div class="modal-content">

					<p>Cambios realizados con exito</p>
				</div>
				<div class="modal-footer">
					<a href="/consultar" class="modal-action modal-close waves-effect waves-green btn-flat">Cerrar</a>
				</div>
			</div>
			<div id="modal2" class="modal">
				<div class="modal-content">

					<p>Se ha eliminado su reserva</p>
				</div>
				<div class="modal-footer">
					<a href="/consultar" class="modal-action modal-close waves-effect waves-green btn-flat">Cerrar</a>
				</div>
			</div>


		</div>

	</main>

{% endblock %}
